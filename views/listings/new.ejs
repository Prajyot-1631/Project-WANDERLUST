<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <div class="col-8 offset-2">

  <h3>Create a New Listing</h3>
  <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
    <div calss="mb-3">
      <label for="title" class="form-label">Title</label>
      <input 
      name="listing[title]" 
      placeholder="Add a catchy title" 
      type="text" 
      class="form-control"
      required> 
      <div class="valid-feedback">Title looks good!</div>
    </div>

    <div calss="mb-3">
      <label for="description" class="form-label" >Description</label>
      <textarea 
      name="listing[description]" 
      class="form-control"
      required>
    </textarea>
    <div class="invalid-feedback">Please Enter a short description!</div>
    </div>
    
    <div calss="mb-3">
      <label for="image" class="form-label">Upload Listing Image</label>
      <input 
      name="listing[image]" 
      type="file"
      class="form-control"
      required>
      
    </div>  
    
    <div class="row">

      <div calss="mb-3 col-md-4">
        <label for="price" class="form-label">Price</label>
        <input 
        name="listing[price]" 
        placeholder="1200" 
       
        class="form-control"
        required>
        <div class="invalid-feedback">Price should be valid!</div>

      </div>

      <div calss="mb-3 col-md-8">
        <label for="country" class="form-label">Country</label>
        <input 
        name="listing[country]" 
        placeholder="India" 
        type="text"
        class="form-control"
        required>
        <div class="invalid-feedback">Country should be valid!</div>
      </div>
      
    </div>
    

    <div calss="mb-3">
      <label for="location" class="form-label">Location</label>
      <input 
      name="listing[location]" 
      placeholder="Thane, Maharashtra" 
      type="text"
      class="form-control"
      required>
      <div class="invalid-feedback">Location should be valid!</div>
    </div>
    
<!-- Creating a filter selector -->
    <div class="mb-3">
      <label for="category" class="form-label">Category</label>
      <select
        name="listing[category]"
        class="form-control"
        required>
        <option value="disabled selected">Select a category</option>
        <option value="trending">Trending</option>
        <option value="mountain">Mountain</option>
        <option value="castle">Castle</option>
        <option value="pool">Pool</option>
        <option value="camping">Camping</option>
        <option value="farm">Farm</option>
        <option value="arctic">Arctic</option>
        <option value="boat">Boat</option>
        <option value="dome">Dome</option>
        <option value="city">City</option>
        <option value="room">Room</option>
      </select>
      <div class="invalid-feedback">Please select a category!</div>
    </div>

    <button class="btn btn-dark add-btn mt-3">Add</button>
  </form>

</div>
</div>